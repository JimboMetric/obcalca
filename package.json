{
  "name": "obcalca",
  "version": "0.0.1",
  "description": "Obsidian inline calculator plugin",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "copy": "copy /Y dist\\main.js \"C:\\Obsidian\\2025\\.obsidian\\plugins\\obcalca\\\" && copy /Y manifest.json \"C:\\Obsidian\\2025\\.obsidian\\plugins\\obcalca\\\" && if exist styles.css copy /Y styles.css \"C:\\Obsidian\\2025\\.obsidian\\plugins\\obcalca\\\"",
    "build": "esbuild src/main.ts --bundle --outfile=dist/main.js --format=cjs --platform=node --external:obsidian --external:@codemirror/state --external:@codemirror/view && npm run copy",
    "watch": "esbuild src/main.ts --bundle --outfile=dist/main.js --format=cjs --platform=node --external:obsidian --external:@codemirror/state --external:@codemirror/view --watch",
    "deploy": "npm run clean && npm run build",
    "sync": "nodemon --watch dist/main.js --ext js,json,css --exec \"npm run copy\"",
    "dev": "npm-run-all --parallel watch sync",
    "typecheck": "tsc --noEmit --watch"
  },
  "dependencies": {
    "mathjs": "^11.12.0"
  },
  "devDependencies": {
    "@types/mathjs": "^9.4.1",
    "esbuild": "^0.25.8",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "obsidian": "^1.8.7"
  }
}
